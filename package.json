{
  "name": "sockets-app",
  "version": "1.0.0",
  "description": "",
  "main": "build/src/index.js",
  "scripts": {
    "tsc": "npx tsc",
    "server-build": "node build/index.js",
    "install-client": "cd client && npm install",
    "build-client": "cd client && npm run build",
    "install-serve": "npm install serve -g",
    "serve": "serve -s build",
    "build": "npm run install-client && npm run build-client",
    "start-prod": "env-cmd -f ./.env.production.local npm run build && npm run tsc && npm run server-build",
    "start": "node build/index.js",
    "heroku-postbuild": "tsc && cd client && npm i --only=dev && npm i && npm run build",
    "server": "nodemon server/src/index.ts",
    "develop": "concurrently --kill-others-on-fail \"npm run server\" \"npm run start --prefix client\"",
    "start:dev": "env-cmd -f ./.env.development.local npm run develop"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "env-cmd": "^10.1.0",
    "express": "^4.18.1",
    "https": "^1.0.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.3.3",
    "socket.io": "^4.5.0",
    "ts-node-dev": "^2.0.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.33",
    "@types/uuid": "^8.3.4",
    "nodemon": "^2.0.16",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  }
}
